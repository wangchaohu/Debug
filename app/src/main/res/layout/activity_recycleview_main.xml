<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >

        <ImageButton
            android:id="@+id/hoverButton"
            android:background="@drawable/hover_button"
            style="@style/MenuStyle"/>

        <ImageButton
            android:id="@+id/hoverButton1"
            android:background="@drawable/hover_button_1"
            android:visibility="gone"
            style="@style/MenuItemStyle"/>
        <ImageButton
            android:id="@+id/hoverButton2"
            android:background="@drawable/hover_button_2"
            android:visibility="gone"
            style="@style/MenuItemStyle"/>
        <ImageButton
            android:id="@+id/hoverButton3"
            android:background="@drawable/hover_button_3"
            android:visibility="gone"
            style="@style/MenuItemStyle"/>
        <ImageButton
            android:id="@+id/hoverButton4"
            android:background="@drawable/hover_button_4"
            android:visibility="gone"
            style="@style/MenuItemStyle"/>
        <ImageButton
            android:id="@+id/hoverButton5"
            android:background="@drawable/hover_button_5"
            android:visibility="gone"
            style="@style/MenuItemStyle"/>
    </FrameLayout>
</FrameLayout>